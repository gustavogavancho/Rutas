<Page
    x:Class="Rutas.Views.TecnicosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:controls="using:Template10.Controls"
    xmlns:data="using:Rutas.Models"
    xmlns:local="using:Rutas.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="TecnicosPage_OnLoaded">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <CollectionViewSource x:Key="cvs" x:Name="cvs" IsSourceGrouped="True" />

        <DataTemplate x:Key="MasterListViewItemTemplate" x:DataType="data:Tecnicos">
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Width="39"
                      Height="36"
                      Grid.RowSpan="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Background="#003366">
                    <TextBlock Text="{x:Bind Apocope}"
                                               FontSize="12" 
                                               FontWeight="Light"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" 
                                               Foreground="White"/>
                </Grid>

                <TextBlock Grid.Column="1"
                                           FontSize="13" 
                                           Text="{x:Bind Nombre}" 
                                           x:Phase="1"  
                                           Style="{ThemeResource BaseTextBlockStyle}"
                                           Margin="12,6,0,0"/>

                <TextBlock  Grid.Column="1"
                                            FontSize="13" 
                                            Grid.Row="1"
                                            Text="{x:Bind Apellido}" 
                                            x:Phase="2"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DetailContentTemplate" x:DataType="data:Tecnicos">
            <Grid Margin="0,6,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Background="#003366"
                                  Height="70"
                                  Width="70">
                    <TextBlock Text="{x:Bind Apocope}" 
                                           FontSize="36" 
                                           FontWeight="Light" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                </Grid>

                <TextBlock Grid.Column="1" 
                                       Margin="8,0,0,0">
                                <Run Text="Nombre:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Nombre}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                                <LineBreak/>
                                <Run Text="Apellido:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Apellido}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                </TextBlock>

                <TextBlock Grid.Row="1" 
                                       Grid.ColumnSpan="2">
                                <Run Text="DNI:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Dni}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                                <LineBreak/>
                                <Run Text="Direccion:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Direccion}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                                <LineBreak/>
                                <Run Text="Fecha Nacimiento:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind FechaNacimiento}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                                <LineBreak/>
                                <Run Text="Email:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Email}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                                <LineBreak/>
                                <Run Text="Telefono:" 
                                     FontSize="14" 
                                     FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{x:Bind Telefono}" 
                                     FontSize="14" 
                                     FontWeight="Light"/>
                </TextBlock>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" 
          Loaded="LayoutRoot_OnLoaded"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="890"/>
                    </VisualState.StateTriggers>
                </VisualState>

                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                        <AdaptiveTrigger MinWindowHeight="0"/>
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="MasterColumn.Width" Value="*" />
                        <Setter Target="DetailColumn.Width" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MasterColumn" Width="320" />
            <ColumnDefinition x:Name="DetailColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <controls:PageHeader x:Name="PageHeader"
                             Grid.Row="0"
                             Text="Página Técnicos"
                             Frame="{x:Bind Frame}"/>

        <RelativePanel Grid.Row="1">
            
            <TextBlock Grid.Row="1" 
                       Grid.Column="0"
                       Text="Lista Técnicos"
                       Margin="12,8,8,8"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       VerticalAlignment="Top"/>
            <Button Name="PrintButton" 
                    Content="&#xE2F6;" 
                    Style="{StaticResource EstiloButton}" 
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="0,0,8,0"
                    Click="PrintButton_OnClick">
                <ToolTipService.ToolTip>
                    <ToolTip Placement="Mouse" Background="#003366">
                        <TextBlock Text="Imprimir" Foreground="White"/>
                    </ToolTip>
                </ToolTipService.ToolTip>
            </Button>

        </RelativePanel>

        <AutoSuggestBox Name="SearchAutoSuggestBox"
                        PlaceholderText="Buscar Técnico" 
                        Margin="4"
                        Grid.Row="2"
                        QueryIcon="Find"
                        TextChanged="SearchAutoSuggestBox_OnTextChanged"/>

        <Grid Name="EmptyItemsBorder"
              Grid.Row="3" 
              Grid.Column="0"
              Visibility="Collapsed"
              BorderThickness="2"
              BorderBrush="Gray"
              Margin="4"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap">
                <Run Text="Click en el boton" FontWeight="Light"/>
                <Run FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontWeight="Bold"/>
                <Run Text="de la parte inferior para agregar un item nuevo" FontWeight="Light"/>
            </TextBlock>

        </Grid>

        <ListView x:Name="MasterListView"
                  Grid.Row="3" 
                  Grid.Column="0"
                  ItemContainerTransitions="{x:Null}"
                  ItemTemplate="{StaticResource MasterListViewItemTemplate}"
                  IsItemClickEnabled="True"
                  VerticalAlignment="Top"
                  SelectionChanged="MasterListView_OnSelectionChanged"
                  ItemsSource="{Binding Source={StaticResource cvs}}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text='{Binding Key}' Style="{StaticResource SubheaderTextBlockStyle}" FontSize="14" />
                            </Grid>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        
        <CommandBar x:Name="ListViewCommandBar"
                    Grid.Row="4" 
                    Grid.Column="0">
            <AppBarButton Name="AddButton" 
                          Label="Agregar" 
                          Icon="Add"
                          Click="AddButton_OnClick"/>
            <AppBarButton Name="EditButton" 
                          Label="Editar" 
                          Icon="Edit"
                          IsEnabled="False"
                          Click="EditButton_OnClick"/>
            <AppBarButton Name="DeleteButton" 
                          Label="Delete" 
                          Icon="Delete"
                          IsEnabled="False"
                          Click="DeleteButton_OnClick"/>
        </CommandBar>

        <ContentPresenter
            x:Name="DetailContentPresenter"
            Grid.Column="1"
            Grid.Row="0" 
            Grid.RowSpan="5"
            BorderThickness="1,0,0,0"
            Padding="12,0"
            Visibility="Collapsed"
            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
            Content="{x:Bind MasterListView.SelectedItem, Mode=OneWay}"
            ContentTemplate="{StaticResource DetailContentTemplate}">
            <ContentPresenter.ContentTransitions>
                <!-- Empty by default. See MasterListView_ItemClick -->
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>

        <Grid Name="EmptyItemsBorder2"
              Grid.Column="1"
              Grid.Row="0" 
              Grid.RowSpan="5"
              Visibility="Collapsed"
              BorderThickness="2"
              BorderBrush="Gray"
              Margin="8"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap">
                <Run Text="No hay un item seleccionado" FontWeight="Light"/>
            </TextBlock>

        </Grid>

        <controls:ModalDialog  x:Name="InputModalDialog"
                               Grid.Row="0" 
                               Grid.RowSpan="4"
                               Grid.ColumnSpan="2"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">

            <controls:ModalDialog.ModalBackground>
                <SolidColorBrush Opacity="0"/>
            </controls:ModalDialog.ModalBackground>

            <controls:ModalDialog.ModalTransitions>
                <TransitionCollection>
                    <ContentThemeTransition VerticalOffset="-300" />
                </TransitionCollection>
            </controls:ModalDialog.ModalTransitions>

            <controls:ModalDialog.ModalContent>
                <Grid x:Name="GridModalContent1" Background="#003366" 
                      CornerRadius="25" 
                      Width="340" 
                      Height="440" 
                      BorderThickness="2">

                    <Grid x:Name="GridModalContent2" 
                          Width="300" 
                          Height="400" 
                          CornerRadius="25" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Tecnico:" 
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="4,0,0,0"/>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Visible">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                    <RowDefinition Height="56"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Rectangle Name="NombreRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="NombreValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="NombreTextBox" 
                                         Grid.Row="0" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         TextChanged="NombreTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="Nombre:" 
                                                   Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                                <Rectangle Name="ApellidoRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="1"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="ApellidoValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="ApellidoTextBox" 
                                         Grid.Row="1" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         TextChanged="ApellidoTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="Apellido:" 
                                                   Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                                <Rectangle Name="DniRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="2"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="DniValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="DniTextBox" 
                                         Grid.Row="2" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         MaxLength="8"
                                         TextChanged="DniTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="DNI:" 
                                               Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                                <Rectangle Name="DireccionRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="3"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="DireccionValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="DireccionTextBox" 
                                         Grid.Row="3" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         TextChanged="DireccionTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="Direccion:" 
                                                   Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                                <Rectangle Name="FechaNacimientoRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="4"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="FechaNacimientoValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <DatePicker Name="FechaNacimientoDatePicker" 
                                            Grid.Row="4" 
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            MinWidth="261"
                                            DateChanged="FechaNacimientoDatePicker_OnDateChanged">
                                    <DatePicker.Header>
                                        <TextBlock Text="Fecha Nacimiento:" 
                                               Style="{StaticResource EstiloHeader}"/>
                                    </DatePicker.Header>
                                </DatePicker>

                                <Rectangle Name="TelefonoRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="5"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="TelefonoValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="TelefonoTextBox" 
                                         Grid.Row="5" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         TextChanged="TelefonoTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="Telefono:" 
                                               Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                                <Rectangle Name="EmailRectangle" 
                                           Style="{StaticResource RectangleStyle}" 
                                           Grid.Row="6"
                                           Grid.Column="0"
                                           Fill="DarkRed">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Placement="Mouse" 
                                                 Background="#003366">
                                            <TextBlock Name="EmailValidator" 
                                                       Foreground="White"
                                                       Text="Campo requerido"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Rectangle>
                                <TextBox Name="EmailTextBox" 
                                         Grid.Row="6" 
                                         Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         Width="261"
                                         TextChanged="EmailTextBox_OnTextChanged">
                                    <TextBox.Header>
                                        <TextBlock Text="Email:" 
                                               Style="{StaticResource EstiloHeader}"/>
                                    </TextBox.Header>
                                </TextBox>

                            </Grid>
                        </ScrollViewer>

                        <StackPanel Margin="10" 
                                    Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">

                            <Button Name="SaveButton" 
                                    Content="&#xE74E;" 
                                    Style="{StaticResource EstiloButton}" 
                                    IsEnabled="False"
                                    Click="SaveButton_OnClick">
                                <ToolTipService.ToolTip>
                                    <ToolTip Placement="Mouse" 
                                             Background="#003366">
                                        <TextBlock Text="Guardar" 
                                                   Foreground="White"/>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </Button>

                            <Button Name="CloseButton" 
                                    Content="&#59540;" 
                                    Style="{StaticResource EstiloButton}"
                                    Click="CloseButton_OnClick">
                                <ToolTipService.ToolTip>
                                    <ToolTip Placement="Mouse" 
                                             Background="#003366">
                                        <TextBlock Text="Cerrar" 
                                                   Foreground="White"/>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </Button>
                        </StackPanel>
                    </Grid>

                </Grid>
            </controls:ModalDialog.ModalContent>

        </controls:ModalDialog>

    </Grid>
</Page>
